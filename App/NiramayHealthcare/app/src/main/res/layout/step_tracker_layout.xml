<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="5dp">

        <ImageView
            android:id="@+id/step_tracker_logo"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/step_tracker_icon" />

        <TextView
            android:id="@+id/step_tracker_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/step_tracker_logo"
            android:text="Step Tracker"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <Switch
            android:id="@+id/tracker_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_steps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:text="0 Steps"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <Button
            android:id="@+id/steps_reset_button"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_background"
            android:text="Reset"
            android:textColor="@color/white" />

    </RelativeLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:paddingVertical="5dp"
        android:columnCount="2"
        android:rowCount="1"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/distance_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="0 Meters in Total"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/calories_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="0 Calories Burned"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:textSize="15dp"/>

    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-condensed"
            android:padding="20dp"
            android:text="@string/step_tracker_manual"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="italic" />

    </LinearLayout>


</LinearLayout>